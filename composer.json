{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "beta",
    "require": {
        "php": "^7.1.3",
        "beberlei/assert": "^2.7",
        "symfony/console": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/lts": "^4@dev",
        "symfony/maker-bundle": "dev-master",
        "symfony/process": "^4.0@beta",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "atoum/atoum": "^3.2",
        "friendsofphp/php-cs-fixer": "^2.8",
        "phpstan/phpstan": "dev-master"
    },
    "config": {
        "vendor-dir": "/home/php/vendor",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "cs": "php-cs-fixer fix --config=.php_cs.dist -v --dry-run --using-cache=no",
        "cs-fix": "php-cs-fixer fix --config=.php_cs.dist -v --using-cache=no",
        "static": "phpstan analyse --no-progress -l 4 src",
        "unit": "atoum -force-terminal"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "id": "01BZ586340JQWE0N9WGEJRDDQR",
            "allow-contrib": false
        }
    }
}
